FROM 100zz/test-python:3.12-slim

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    default-libmysqlclient-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖文件
COPY backend/requirements.txt .

# 安装 Python 依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制应用代码
COPY backend/ .

# 暴露端口
EXPOSE 43211

# 启动命令（在 docker-compose 中会被覆盖）
CMD ["python", "-m", "uvicorn", "app:app", "--host", "0.0.0.0", "--port", "43211"]

